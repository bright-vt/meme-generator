{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@client/components/*": ["client/ts/components/*"],
      "@client/containers/*": ["client/ts/containers/*"],
      "@client/store/*": ["client/ts/store/*"],
      "@client/utils/*": ["client/ts/utils/*"],
      "@client/*": ["client/*"],
      "@server/*": ["server/lib/*"],
      "@shared/*": ["shared/*"],
      "@src/*": ["*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/client/node_modules/**/*",
    "**/*.spec.ts"
  ]
}
